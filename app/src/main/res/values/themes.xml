<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.GithubSearcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <item name="colorOnPrimary">@color/black</item>

    <!-- Surface color. -->
    <item name="android:colorBackground">@color/grey_50</item>
    <item name="android:windowBackground">@color/grey_50</item>
    <item name="colorSurface">@color/grey_50</item>
    <item name="colorOnSurface">@color/grey_50</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/white</item>
</style>

<style name="Theme.GithubSearcher.Splash" parent="Theme.GithubSearcher">
    <item name="android:windowBackground">@drawable/bg_splash_screen</item>
</style>

<style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:textColorHint">@color/cod_gray_40</item>
    <item name="android:tint">@color/black</item>
</style>

</resources>